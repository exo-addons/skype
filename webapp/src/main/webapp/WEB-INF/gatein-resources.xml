  <!-- CSS tweaks for Enterprise skin -->
  <portlet-skin>
    <application-name>skype</application-name>
    <portlet-name>SkypeProviderPortlet</portlet-name>
    <skin-name>Enterprise</skin-name>
    <css-path>/skin/skype-mssfb-enterprise.css</css-path>
    <overwrite>true</overwrite>
  </portlet-skin>
  <portlet-skin>
    <application-name>skype</application-name>
    <portlet-name>SkypeBusinessProviderPortlet</portlet-name>
    <skin-name>Enterprise</skin-name>
    <css-path>/skin/skype-mssfb-enterprise.css</css-path>
    <overwrite>true</overwrite>
  </portlet-skin>
  
  <module>
    <name>skypeWeb</name>
    <url>https://swx.cdn.skype.com/shared/v/1.2.15/SkypeBootstrap.min.js</url>
  </module>
  <module>
    <name>videoCalls_skype</name>
    <script>
      <path>/js/videocalls-skype.js</path>
    </script>
    <depends>
      <module>videoCallsJquery</module>
    </depends>
    <depends>
      <module>videoCalls</module>
    </depends>
  </module>
  <module>
    <name>videoCalls_mssfb</name>
    <script>
      <path>/js/videocalls-mssfb.js</path>
    </script>
    <depends>
      <module>videoCallsJquery</module>
    </depends>
    <depends>
      <module>videoCalls</module>
    </depends>
    <depends>
      <module>skypeWeb</module>
    </depends>
  </module>
  
  <portlet>
    <name>SkypeProviderPortlet</name>
    <module>
      <depends>
        <module>videoCallsJquery</module>
      </depends>
      <depends>
        <module>videoCalls_skype</module>
      </depends>
    </module>
  </portlet>
  <portlet>
    <name>SkypeBusinessProviderPortlet</name>
    <module>
      <depends>
        <module>videoCallsJquery</module>
      </depends>
    </module>
  </portlet>
</gatein-resources>
