  <!-- Javascript for Video Calls support in Platform -->
  <module>
    <name>videoCallsJquery</name>
    <as>$</as>
    <load-group>videoCallsGRP</load-group>
    <script>
      <adapter>
        (function() {
        <include>/js/jquery-3.2.1.js</include>
          return jQuery.noConflict(true);
        })();
      </adapter>
    </script>
  </module>
  <module>
    <name>videoCallsJqueryPnotify</name>
    <load-group>videoCallsGRP</load-group>
    <script>
      <path>/js/jquery.pnotify.min.js</path>
    </script>
    <depends>
      <module>videoCallsJquery</module>
      <as>jQuery</as>
    </depends>
  </module>
  <module>
    <name>videoCallsJqueryUI</name>
    <as>jqueryUI</as>
    <load-group>videoCallsGRP</load-group>
    <script>
      <path>/js/jquery-ui.min.js</path>
    </script>
    <depends>
      <module>videoCallsJquery</module>
      <as>jQuery</as>
    </depends>
  </module>
  <module>
    <name>videoCalls</name>
    <load-group>videoCallsGRP</load-group>
    <script>
      <path>/js/videocalls.js</path>
    </script>
    <depends>
      <module>videoCallsJquery</module>
    </depends>
    <depends>
      <module>videoCallsJqueryUI</module>
    </depends>
    <depends>
      <module>videoCallsJqueryPnotify</module>
    </depends>
  </module>
  <module>
    <name>videoCallsPortlet</name>
    <load-group>videoCallsGRP</load-group>
    <script>
      <path>/js/videocalls-portlet.js</path>
    </script>
    <depends>
      <module>videoCallsJquery</module>
    </depends>
    <depends>
      <module>videoCalls</module>
    </depends>
  </module>
  
  <portlet>
    <name>VideoCallsPortlet</name>
    <module>
      <depends>
        <module>videoCallsJquery</module>
      </depends>
      <depends>
        <module>videoCalls</module>
      </depends>
      <depends>
        <module>videoCallsPortlet</module>
      </depends>
    </module>
  </portlet>
</gatein-resources>
